{% case section.settings.colors %}
  {% when 'white' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--white">
  {% when 'light' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--light">
  {% when 'accent' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--accent">
  {% when 'dark' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--dark">
{% endcase %}

<div class="wrapper show-on-scroll">

<div class="image-bar grid">
{% case section.blocks.size %}
  {% when 1 %}
    {%- assign column_size = '' -%}
  {% when 2 %}
    {%- assign column_size = 'large--one-half' -%}
  {% when 3 %}
    {%- assign column_size = 'large--one-third' -%}
  {% else %}
    {%- assign column_size = 'large--one-quarter' -%}
{% endcase %}

{% for block in section.blocks %}
  {%- assign img_url = '' -%}
  <div class="grid__item {{ column_size }}" {{ block.shopify_attributes }}>
    <div style="{% if block.settings.bg_color != blank %}background-color: {{ block.settings.bg_color }};{% else %}background-color: #000;{% endif %}">
      {% if block.settings.title != blank %}
      <h3 class="image-bar--title" style="font-size: {{block.settings.font_size}};">{{ block.settings.title }}</h3>
      {% endif %}

      {% if block.settings.description != blank %}
      <div class="image-bar--description">{{ block.settings.description }}</div>
      {% endif %}


      {% if block.settings.link != blank %}
      <a href="{{ block.settings.link }}">Shop</a>
      {% endif %}
    </div>
  </div>
  {% endfor %}

{% if section.blocks.size == 0 %}
<div class="placeholder-noblocks">
  {{ 'homepage.onboarding.no_content' | t }}
</div>

{% endif %}
</div>

</div>

</div>

{% schema %}
{
  "name": "Gallery with text",
  "class": "image-gallery-wrapper",
  "max_blocks": 4,
  "settings": [
    {
      "type": "select",
      "id": "colors",
      "label": "Color scheme",
      "default": "white",
      "options": [
        {
          "value": "white",
          "label": "Minimal"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "accent",
          "label": "Feature"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "color",
          "id": "bg_color",
          "label": "Card background color"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Optional"
        },
        {
        "type": "range",
        "id": "font_size",
        "min": 12,
        "max": 46,
        "step": 1,
        "unit": "px",
        "label": "Font size",
        "default": 16
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery with text",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
