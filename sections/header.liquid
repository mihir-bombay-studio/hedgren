  {% capture header_logo %}
    {% if template == 'index' %}
      <h1 class="site-header__logo" id="site-title" itemscope itemtype="http://schema.org/Organization">
    {% else %}
      <div class="site-header__logo h1" id="site-title" itemscope itemtype="http://schema.org/Organization">
    {% endif %}

    {% if section.settings.logo %}
      <a href="/" itemprop="url" class="site-header__logo-image">
        {% assign alt = section.settings.logo.alt | default: shop.name %}
        {% capture props %}
          style="width: {{ section.settings.logo_max_width | escape }}px"
          itemprop="logo"
        {% endcapture %}
        {% include 'responsive-image' with section.settings.logo, alt: alt, props: props %}
      </a>
    {% else %}
      <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
    {% endif %}

    {% if section.settings.overlay_header and template == 'index' %}
      {% if section.settings.overlay_logo %}
        {% assign img = section.settings.overlay_logo %}
      {% elsif section.settings.logo %}
        {% assign img = section.settings.logo %}
      {% else %}
        {% assign img = none %}
      {% endif %}

      {% if img %}
        <a href="/" itemprop="url" class="site-header__logo-overlay-image">
          {% assign alt = section.settings.logo.alt | default: shop.name %}
          {% capture props %}
            style="width: {{ section.settings.logo_max_width | escape }}px"
            itemprop="logo"
          {% endcapture %}
          {% include 'responsive-image' with img, alt: alt, props: props %}
        </a>
      {% else %}
        <a class="site-header__logo-overlay-link" href="/" itemprop="url">{{ shop.name }}</a>
      {% endif %}
    {% endif %}

    {% if template == 'index' %}
      </h1>
    {% else %}
      </div>
    {% endif %}
  {% endcapture %}

