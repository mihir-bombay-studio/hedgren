					<li>
						<a href="/cart" class="site-header__cart-toggle{% if settings.ajax_cart_method == "drawer" %} js-drawer-open-right-link{% endif %}" aria-controls="CartDrawer" aria-expanded="false" aria-label="Cart">
							<i class="fa fa-shopping-cart fa-lg"></i>
              <span class="site-header__cart-indicator {% if cart.item_count == 0 %}hide{% endif %}"></span>
						</a>
					</li>

				</ul>
			</div>

          </div>

      {% endif %}

