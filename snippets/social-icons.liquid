{% if
  settings.sm_facebook_link != blank or
  settings.sm_twitter_link != blank or
  settings.sm_youtube_link != blank or
  settings.sm_flickr_link != blank or
  settings.sm_pinterest_link != blank or
  settings.sm_instagram_link != blank %}

<ul id="sm-icons" class="clearfix">

  {% if settings.sm_facebook_link != blank %}
    <li id="sm-facebook"><a href="{{settings.sm_facebook_link}}" target="_blank" aria-label="Facebook"><i class="fa fa-facebook fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_twitter_link != blank %}
    <li id="sm-twitter"><a href="{{settings.sm_twitter_link}}" target="_blank" aria-label="Twitter"><i class="fa fa-twitter fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_instagram_link != blank %}
    <li id="sm-instagram"><a href="{{settings.sm_instagram_link}}" target="_blank" aria-label="Instagram"><i class="fa fa-instagram fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_tumblr_link != blank %}
    <li id="sm-tumblr"><a href="{{settings.sm_tumblr_link}}" target="_blank" aria-label="Tumblr"><i class="fa fa-tumblr fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_pinterest_link != blank %}
    <li id="sm-pinterest"><a href="{{settings.sm_pinterest_link}}" target="_blank" aria-label="Pinterest"><i class="fa fa-pinterest fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_youtube_link != blank %}
    <li id="sm-youtube"><a href="{{settings.sm_youtube_link}}" target="_blank" aria-label="Youtube"><i class="fa fa-youtube fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_vimeo_link != blank %}
    <li id="sm-vimeo"><a href="{{settings.sm_vimeo_link}}" target="_blank" aria-label="Vimeo"><i class="fa fa-vimeo fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_flickr_link != blank %}
    <li id="sm-flickr"><a href="{{settings.sm_flickr_link}}" target="_blank" aria-label="Flickr"><i class="fa fa-flickr fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_snapchat_link != blank %}
    <li id="sm-snapchat"><a href="{{settings.sm_snapchat_link}}" target="_blank" aria-label="Snapchat"><i class="fa fa-snapchat fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_houzz_link != blank %}
    <li id="sm-houzz"><a href="{{settings.sm_houzz_link}}" target="_blank" aria-label="Houzz"><i class="fa fa-houzz fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_linkedin_link != blank %}
    <li id="sm-linkedin"><a href="{{settings.sm_linkedin_link}}" target="_blank" aria-label="Linkedin"><i class="fa fa-linkedin fa-2x"></i></a></li>
  {% endif %}

  {% if settings.sm_google_plus_link != blank %}
    <li id="sm-google_plus"><a href="{{settings.sm_google_plus_link}}" target="_blank" aria-label="Google plus"><i class="fa fa-google-plus fa-2x"></i></a></li>
  {% endif %}

</ul>

{% endif %}
